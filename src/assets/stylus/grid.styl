// average grid

[class*="avg-"] {
    display: block;
    padding: 0;
    margin: 0;
    list-style: none;
    @extend .clearfix;


    > li {
        display: block;
        height: auto;
        float: left;
    }
    
    .haspadding > li {
        padding: 5px;
    }
}

for index in (1..colums) {
    .avg-mb-{index} > li {
        width: colums-width * (colums / index);
        
        &:nth-of-type(n) {
            clear: none;
        }
        
        &:nth-of-type({index}n + 1) {
            clear: both;
        }
    }
}

@media (min-width: screen-tablet) {
    for index in (1..colums) {
        .avg-tb-{index} > li {
            width: colums-width * (colums / index);
            
            &:nth-of-type(n) {
