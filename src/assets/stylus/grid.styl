
// grid

// config
colums = 12;
colums-width = 100% / colums;
gutter-width = 10px;

// break point
screen-tablet = 768px
screen-desktop = 992px
screen-wide = 1200px

// mixins
box-sizing() {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

// container
.container {
    margin-left: auto;
    margin-right: auto;
    padding-left: (gutter-width / 2);
    padding-right: (gutter-width / 2);
    box-sizing();
}

// column group
.row {
    margin-left: (gutter-width / -2);
    margin-right: (gutter-width / -2);
    @extend .clearfix;
}

.row [class*="col-"] {
    float: left;
    min-height: 1px;
    padding-left: (gutter-width / 2);
    padding-right: (gutter-width / 2);
    box-sizing()
}

.row [class*="-push-"],
.row [class*="-pull-"] {
    position: relative;
}

// mobile and up

for index in (1..colums) {
    .col-mb-{index} {
        width: colums-width * index;
    }
}

// table and up

@media (min-width: screen-tablet) {
    .container {
        max-width: screen-tablet - (gutter-width * 2);
    }

    // colums
    for index in (1..colums) {
        .col-tb-{index} {
            width: colums-width * index;
        }
    }

    // offset
    for index in (0..colums) {
        .col-tb-offset-{index} {
            margin-left colums-width * index;
        }
    }

    // pull
    for index in (0..colums) {
        .col-tb-pull-{index} {
            right: colums-width * index;
        }
    }

    // push
    for index in (0..colums) {
        .col-tb-push-{index} {
            left: colums-width * index;
        }
    }
    
    .col-tb-centered {
        margin-left: auto;
        margin-right: auto;
        float: none;
    }
    .col-tb-centered:last-child {
        float: none;
    }
    .col-tb-uncentered {
        margin-left: 0;
        margin-right: 0;
        float: left;
    }
    .col-tb-uncentered:last-child {
        float: left;
    }
}

