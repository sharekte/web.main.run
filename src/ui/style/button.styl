@import "variables.styl"
// default button
.m-button-default {
    -moz-appearance: none;
    -webkit-appearance: none;
    -ms-appearance: none;
    appearance: none;
    -moz-transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, color 0.2s ease-in-out;
    -webkit-transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, color 0.2s ease-in-out;
    -ms-transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, color 0.2s ease-in-out;
    transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, color 0.2s ease-in-out;
    background-color: transparent;
    border: 0;
    border-radius: 1px;
    box-shadow: inset 0 0 0 1px #dddddd;
    color: #61686b;
    cursor: pointer;
    display: inline-block;
    font-size: 1.6rem;
    font-weight: 400;
    height: 3rem;
    letter-spacing: 0.3rem;
    line-height: 3rem;
    padding: 0 1.8rem;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    white-space: nowrap;
    outline: none;
    
    &:hover {
        background-color: rgba(144, 144, 144, 0.075);
        color: #61686b;
    }
    
    &:active {
        background-color: rgba(144, 144, 144, 0.15);
        color: #61686b;
    }
    
    &.icon:before {
        margin-right: 0.5rem;
    }
    
    &.fit {
        display: block;
        margin: 0 0 1rem 0;
        width: 100%;
    }
    
    &.small {
        font-size: 1.5rem;
        height: 2.6rem;
        line-height: 2.6rem;
        padding: 0 1.2rem;
    }
    
    &.big {
        font-size: 2.2rem;
        height: 3.4rem;
        line-height: 3.4rem;
        padding: 0 2.4rem;
    }
    
    &.next {
        padding-right: 5rem;
        position: relative;
        
        &:before,
        &:after {
            -moz-transition: opacity 0.2s ease-in-out;
            -webkit-transition: opacity 0.2s ease-in-out;
            -ms-transition: opacity 0.2s ease-in-out;
            transition: opacity 0.2s ease-in-out;
            background-position: center right;
            background-repeat: no-repeat;
            background-size: 36px 24px;
            content: '';
            display: block;
            height: 100%;
            position: absolute;
            right: 1.5rem;
            top: 0;
            vertical-align: middle;
            width: 36px;
        }
        
        &:before {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' width='36px' height='24px' viewBox='0 0 36 24' zoomAndPan='disable'%3E%3Cstyle%3Eline %7B stroke: %23ffffff%3B stroke-width: 2px%3B %7D%3C/style%3E%3Cline x1='0' y1='12' x2='34' y2='12' /%3E%3Cline x1='25' y1='4' x2='34' y2='12.5' /%3E%3Cline x1='25' y1='20' x2='34' y2='11.5' /%3E%3C/svg%3E");
        }
        
        &:after {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' width='36px' height='24px' viewBox='0 0 36 24' zoomAndPan='disable'%3E%3Cstyle%3Eline %7B stroke: %238cd1a8%3B stroke-width: 2px%3B %7D%3C/style%3E%3Cline x1='0' y1='12' x2='34' y2='12' /%3E%3Cline x1='25' y1='4' x2='34' y2='12.5' /%3E%3Cline x1='25' y1='20' x2='34' y2='11.5' /%3E%3C/svg%3E");
            opacity: 0;
            z-index: 1;
        }
        
        &:hover:after,
        &:active:after {
                opacity: 1;
        }
    }
    
    @media screen and (max-width: 1280px) {

        &.next {
            padding-right: 5rem;
        }
    }
    
    &.special {
        background-color: #fcad26;
        border: 0;
        box-shadow: none;
        color: #ffffff;
        
        &:hover {
            background-color: #f29e0d;
        }
        
        &:active {
            background-color: #dc7801;
        }
    }
    
    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}

/* common */
.m-button-common-1 {
    display: inline-block;
    padding: .4rem 1.4rem;
    border: 1px solid #dddddd;
    border-radius: 1px;
    background: none;
    color: inherit;
    font-size: 1.6rem;
    font-weight: 400;
    vertical-align: middle;
    position: relative;
    cursor: pointer;
    text-transform: uppercase;
    z-index: 1;
    -webkit-backface-visibility: hidden;
    -moz-osx-font-smoothing: grayscale;
    
    &:focus {
        outline: none;
    }
    
    & > span {
        vertical-align: middle;
    }
}

/* Winona */
.m-button--winona {
    overflow: hidden;
    padding: 0;
    transition: border-color 0.3s, background-color 0.3s;
    transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
    
    &::after {
        content: attr(data-text);
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0;
        color: #dc7801;
        -webkit-transform: translate3d(0, 25%, 0);
        transform: translate3d(0, 25%, 0);
    }
    
    & > span {
        display: block;
    }
    
    &::after, & > span {
        padding: .4rem 1.4rem;
        transition: transform 0.3s, opacity 0.3s;
        transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
    }
    
    &:hover {
        border-color: #f29e0d;
        background-color: rgba(242, 158, 13, .2);
        
        &::after {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }
        
        & > span {
            opacity: 0;
            transform: translate3d(0, -25%, 0);
        }
    }
    
    &.fit {
        display: block;
        margin: 0 0 1rem 0;
        width: 100%;
    }
    
    &.small {
        font-size: 1.5rem;
        
        &::after, & > span {
            padding: .2rem 1.2rem;
        }
    }
    
    &.big {
        font-size: 2rem;
    }
    
    &.special {
        &::after {
            color: #ffffff;
        }

        &:hover {
            background-color: #f29e0d;
        }
    }
    
    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}

/* Ujarak */
.m-button--ujarak {
    transition: border-color 0.4s, color 0.4s;
    transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
    border-color: #ffffff;
    
    &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #f29e0d;
        z-index: -1;
        opacity: 0;
        transform: scale3d(0.7, 1, 1);
        transition: transform 0.4s, opacity 0.4s;
        transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1);
    }
    
    &:hover {
        color: #fff;
        border-color: #f29e0d;
        
        &::before {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }
    }
    
    &:active {
        border-color: #dc7801;

        &::before {
            background-color: #dc7801;
            transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, color 0.2s ease-in-out;
        }
    }
    
    &.fit {
        display: block;
        margin: 0 0 1rem 0;
        width: 100%;
    }
    
    &.small {
        font-size: 1.5rem;
        line-height: 1.5rem;
        padding: .4rem 1.2rem;
    }
    
    &.big {
        font-size: 2rem;
    }
    
    &.special {
        border-color: #f29e0d;
    }
    
    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}

