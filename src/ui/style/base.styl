@import "variables.styl"
// base
    
*,
*:before,
*:after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

html,
body {
    height: 100%;
}

html {
    font-size: 62.5%;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
    
body {
    margin: 0;
    position: relative;
}

html.is-touch {
    height: 100vh;
    overflow: hidden;

    #wrapper {
        -webkit-backface-visibility: hidden;
        -webkit-overflow-scrolling: touch;
        -webkit-transform: translate3d(0, 0, 0);
        height: 100vh;
        overflow: auto;
    }
}

@media only screen and (max-width: 640px) {
    /**
     * Break strings if their length exceeds the width of their container
     */
    body {
        word-wrap: break-word;
        -webkit-hyphens: auto;
        -ms-hyphens: auto;
        -moz-hyphens: auto;
        hyphens: auto;
    }
}

body,
input,
select,
textarea,
button {
    font-family: Helvetica, Tahoma, Arial, STXiHei, "华文细黑", "Microsoft YaHei", "微软雅黑", SimSun, "宋体", Heiti, "黑体", "FontAwesome", sans-serif;
    font-size: 1.6rem;
    font-weight: 400;
    line-height: 1.8;
    color: font-base-color;
}

body,
input,
textarea,
select,
button {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -moz-font-feature-settings: "liga", "kern";
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
main,
nav,
section,
summary {
    display: block;
}

img {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    vertical-align: middle;
    border: 0
}

a {
    -moz-transition: color 0.2s ease-in-out, border-bottom-color 0.2s ease-in-out;
    -webkit-transition: color 0.2s ease-in-out, border-bottom-color 0.2s ease-in-out;
    -o-transition: color 0.2s ease-in-out, border-bottom-color 0.2s ease-in-out;
    -ms-transition: color 0.2s ease-in-out, border-bottom-color 0.2s ease-in-out;
    transition: color 0.2s ease-in-out, border-bottom-color 0.2s ease-in-out;
    color: font-a-color;
    text-decoration: none;
    cursor: pointer;

    &:hover {
        border-bottom-color: transparent !important;
        color: font-a-hover-color;
        text-decoration: none;
    }
    
    &:focus {
        outline: none;
    }
}

strong, b {
    color: font-strong-color;
    font-weight: 700;
}

em, i {
    font-style: italic;
}

p {
    margin: 0 0 2rem 0;
}

h1, h2, h3, h4, h5, h6 {
    letter-spacing: 0.075rem;
    margin: 0 0 1rem 0;
    // text-transform: uppercase;
    font-weight: 400;
    color: font-hx-color;

    a {
        color: inherit;
        text-decoration: none;
    }
}

h1 {
    font-size: 2.8rem;
    line-height: 3rem;
}

h2 {
    font-size: 2.4rem;
    line-height: 2.6rem;
}

h3 {
    font-size: 2rem;
    line-height: 2.2rem;
}

h4 {
    font-size: 1.6rem;
    line-height: 1.6rem;
}

h5 {
    font-size: 1.6rem;
    line-height: 1.6rem;
}

h6 {
    font-size: 1.6rem;
    line-height: 1.6rem;
}

sub {
    font-size: 0.8rem;
    position: relative;
    top: 0.5rem;
}

sup {
    font-size: 0.8rem;
    position: relative;
    top: -0.5rem;
}

hr {
    border: 0;
    border-bottom: solid 1px #dddddd;
    margin: 2rem 0;

    &.major {
        margin: 3rem 0;
    }
}

blockquote {
    border-left: solid 6px #dddddd;
    font-style: italic;
    margin: 0 0 2rem 0;
    padding: 1rem 0 1rem 1.5rem;
}

code {
    background: rgba(144, 144, 144, 0.075);
    font-family: "Source Code Pro", Consolas, monospace;
    font-size: 1.4rem;
    margin: 0 0.25rem;
    padding: 0.25rem 0.65rem;

    // white-space: pre-wrap;
    // word-wrap: break-word;
    // word-break: break-all;
}

pre {
    -webkit-overflow-scrolling: touch;
    font-family: "Source Code Pro", Consolas, monospace;
    font-size: 1.4rem;
    margin: 0 0 2rem 0;

    code {
        display: block;
        line-height: 1.75rem;
        padding: 1rem 1.5rem;
        overflow-x: auto;
    }
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

ol, ul {
    list-style: none;
}

ins {
    background: #e6ffe6;
}

del {
    background: #ffe6e6;
}

.align-left {
    text-align: left;
}

.align-center {
    text-align: center;
}

.align-right {
    text-align: right;
}

.clearfix {
    zoom: 1; 

    &:before, &:after {
        content: " ";
        display: table; 
    }

    &:after {
        clear: both; 
    }
}
