.select-wrapper {
    text-decoration: none;
    display: block;
    position: relative;

    &:before {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        font-family: FontAwesome;
        font-style: normal;
        font-weight: normal;
        text-transform: none !important;
    }

    &:before {
        color: #a8b0b3;
        content: '\f078';
        display: block;
        height: 3rem;
        line-height: 3rem;
        pointer-events: none;
        position: absolute;
        right: 0;
        text-align: center;
        top: 0;
        width: 3rem;
    }

    select::-ms-expand {
        display: none;
    }
}

