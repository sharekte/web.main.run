.m-input {
    -moz-appearance: none;
    -webkit-appearance: none;
    -o-appearance: none;
    -ms-appearance: none;
    appearance: none;
    background: rgba(144, 144, 144, 0.15);
    border-radius: 0;
    border: none;
    color: inherit;
    display: block;
    height: 3rem;
    outline: 0;
    padding: 0 1.2rem;
    text-decoration: none;
    width: 100%;
    transition: box-shadow 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    box-shadow: inset 0 0 0 1px rgba(252, 173, 38, .5);

    &:invalid {
        box-shadow: none;
    }
    
    &:focus {
        box-shadow: inset 0 0 0 1px #fcad26;
        border: none;
    }

    &.small {
        height: 2.4rem;
    }

    &.big {
        height: 3.4rem;
    }

    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}

// form
form {
    margin: 0 0 2rem 0;
    
    .field {
        margin: 0 0 2rem 0;

        &.half {
            width: 50%;
            float: left;
            padding: 0 0 0 1rem;

            &.first {
                padding: 0 1rem 0 0;
            }
        }
    }

    > .actions {
        margin: 2.5rem 0 0 0 !important;
    }

    @media screen and (max-width: 736px) {
        .field {
            margin: 0 0 1.5rem 0;

            &.half {
                padding: 0 0 0 0.75rem;

                &.first {
                    padding: 0 0.75rem 0 0;
                }
            }
        }

        .actions {
            margin: 2rem 0 0 0 !important;
        }
    }

    @media screen and (max-width: 480px) {
        .field.half {
            width: 100%;
            float: none;
            padding: 0;

            &.first {
                padding: 0;
            }
        }
    }
}

label {
    color: #61686b;
    display: block;
    font-size: 1.6rem;
    font-weight: 400;
    margin: 0 0 1rem 0;
}

