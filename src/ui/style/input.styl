.m-input {
    -moz-appearance: none;
    -webkit-appearance: none;
    -o-appearance: none;
    -ms-appearance: none;
    appearance: none;
    //background: rgba(144, 144, 144, 0.15);
    border-radius: 0;
    border: none;
    color: inherit;
    display: block;
    width: 100%;
    height: 3rem;
    line-height: 3rem;
    outline: 0;
    padding: 0 1.2rem;
    text-decoration: none;
    transition: box-shadow 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    box-shadow: inset 0 0 0 1px rgba(252, 173, 38, .5);

    &:invalid {
        box-shadow: none;
    }
    
    &:focus {
        box-shadow: inset 0 0 0 1px #fcad26;
        border: none;
    }

    &.small {
        height: 2.4rem;
        font-size: 1.4rem;
    }

    &.big {
        height: 3.4rem;
        font-size: 1.8rem;
    }

    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}

.m-input-common {
    position: relative;
    z-index: 1;
    display: inline-block;
    //margin: 1em;
    //max-width: 400px;
    //width: calc(100% - 2em);
    width: 100%;
    vertical-align: top;
}

.m-input__field {
    position: relative;
    display: block;
    float: right;
    padding: 0.8rem;
    width: 60%;
    border: none;
    border-radius: 0;
    background: #f0f0f0;
    //color: #aaa;
    font-weight: bold;
    -webkit-appearance: none; /* for box shadows to show on iOS */
        
    &:focus {
        outline: none;
    }
}

.m-input__label {
    display: inline-block;
    float: right;
    padding: 0 1rem;
    width: 40%;
    //color: #6a7989;
    font-weight: bold;
    //font-size: 70.25%;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
        
    .m-input__label-content {
        position: relative;
        display: block;
        padding: 1.6rem 0;
        width: 100%;
    }
}

/* Haruki */
.m-input--haruki {
    //margin: 4em 1em 1em;
    
    .m-input__field--haruki {
        padding: 1.2rem 0.25rem;
        width: 100%;
        background: transparent;
        //color: #AFB5BB;
        font-size: 2rem;
    }

    .m-input__label--haruki {
        position: absolute;
        width: 100%;
        text-align: left;
        pointer-events: none;
        
        .m-input__label-content--haruki {
            transition: transform 0.3s;
        }
        
        &::before,
        &::after {
            content: '';
            position: absolute;
            left: 0;
            z-index: -1;
            width: 100%;
            height: 2px;
            background: #fcad26;
            transition: transform 0.3s;
        }
        
        &::before {
            top: 0;
        }
        
        &::after {
            bottom: 0;
        }
    }
    
    
}

.m-input__field--haruki:focus + .m-input__label--haruki .m-input__label-content--haruki,
.m-input--filled .m-input__label-content--haruki {
    transform: translate3d(0, -90%, 0);
}
    
.m-input__field--haruki:focus + .m-input__label--haruki::before,
.m-input--filled .m-input__label--haruki::before {
    transform: translate3d(0, -0.4rem, 0);
}
    
.m-input__field--haruki:focus + .m-input__label--haruki::after,
.m-input--filled .m-input__label--haruki::after {
    transform: translate3d(0, 0.4rem, 0);
}

/* Yoko */
.m-input__field--yoko {
    z-index: 10;
    width: 100%;
    background: transparent;
    color: #f5f5f5;
    opacity: 0;
    -webkit-transition: opacity 0.3s;
    transition: opacity 0.3s;
}

.m-input__label--yoko {
    position: relative;
    width: 100%;
    color: #fcad26;
    text-align: left;
    
    &::before {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 0;
        width: 100%;
        height: 4.4rem;
        background: #fcad26;
        transform: perspective(1000px) rotate3d(1, 0, 0, 90deg);
        transform-origin: 50% 100%;
        transition: transform 0.3s;
    }
    
    &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0.2rem;
        background: #fcad26;
        transform-origin: 50% 0%;
        transition: transform 0.3s;
    }
    
    .m-input__label-content--yoko {
        padding: 0.75rem 0;
    }
}

.m-input__field--yoko:focus,
.m-input--filled .m-input__field--yoko {
    opacity: 1;
    transition-delay: 0.3s;
}

.m-input__field--yoko:focus + .m-input__label--yoko::before,
.m-input--filled .m-input__label--yoko::before {
    transform: perspective(1000px) rotate3d(1, 0, 0, 0deg);
}

.m-input__field--yoko:focus + .m-input__label--yoko,
.m-input--filled .m-input__label--yoko {
    pointer-events: none;
}

.m-input__field--yoko:focus + .m-input__label--yoko::after,
.m-input--filled .m-input__label--yoko::after {
    transform: perspective(1000px) rotate3d(1, 0, 0, -90deg);
}

/* Ichiro */
.m-input__field--ichiro {
    position: absolute;
    top: 4px;
    left: 4px;
    z-index: 100;
    display: block;
    padding: 0 0.55rem;
    width: calc(100% - 8px);
    height: calc(100% - 8px);
    background: #f0f0f0;
    color: #7F8994;
    opacity: 0;
    transform: scale3d(1, 0, 1);
    transform-origin: 50% 100%;
    transition: opacity 0.3s, transform 0.3s;
}

.m-input__label--ichiro {
    width: 100%;
    text-align: left;
    cursor: text;
    color: #ffffff;
    
    &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #fcad26;
        transform-origin: 50% 100%;
        transition: transform 0.3s;
    }
    
    .m-input__label-content--ichiro {
        transform-origin: 0% 50%;
        transition: transform 0.3s;
    }
}

.m-input__field--ichiro:focus,
.m-input--filled .m-input__field--ichiro {
    opacity: 1;
    transform: scale3d(1, 1, 1);
}

.m-input__field--ichiro:focus + .m-input__label--ichiro,
.m-input--filled .m-input__label--ichiro {
    cursor: default;
    pointer-events: none;
}

.m-input__field--ichiro:focus + .m-input__label--ichiro::before,
.m-input--filled .m-input__label--ichiro::before {
    transform: scale3d(1, 1.5, 1);
}

.m-input__field--ichiro:focus + .m-input__label--ichiro .m-input__label-content--ichiro,
.m-input--filled .m-input__label-content--ichiro {
    transform: translate3d(0, -4.4rem, 0) scale3d(0.8, 0.8, 1) translateZ(1px);
}

/* Juro */
.m-input--juro {
    //overflow: hidden;
}

.m-input__field--juro {
    position: absolute;
    z-index: 100;
    padding: 2.8rem 1rem 0;
    width: 100%;
    background: transparent;
    //color: #1784cd;
    font-size: 1.6rem;
}

.m-input__label--juro {
    padding: 0;
    width: 100%;
    height: 100%;
    background: #fcad26;
    color: #ffffff;
    text-align: left;
    transition: background-color 0.3s, color 0.3s;
    
    &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0px solid transparent;
        transition: border-width 0.3s, border-color 0.3s;
    }
    
    .m-input__label-content--juro {
        padding: 2rem 1rem;
        transform-origin: 0% 50%;
        transition: transform 0.3s, color 0.3s;
        text-rendering: geometricPrecision;
    }
}

.m-input__field--juro:focus + .m-input__label--juro,
.m-input--filled .m-input__label--juro {
    background: #ffffff;
}

.m-input__field--juro:focus + .m-input__label--juro::before,
.m-input--filled .m-input__label--juro::before {
    border-width: 4px;
    border-color: #fcad26;
    border-top-width: 2rem;
}

.m-input__field--juro:focus + .m-input__label--juro .m-input__label-content--juro,
.m-input--filled .m-input__label--juro .m-input__label-content--juro {
    color: #fff;
    transform: translate3d(0, -2.4rem, 0) scale3d(0.75, 0.75, 1) translateZ(1px);
}
