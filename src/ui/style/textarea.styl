.m-textarea {
    -moz-appearance: none;
    -webkit-appearance: none;
    -o-appearance: none;
    -ms-appearance: none;
    appearance: none;
    //background: rgba(144, 144, 144, 0.15);
    background-color: #ffffff;
    border-radius: 0;
    border: none;
    color: inherit;
    display: block;
    outline: 0;
    //padding: 0 1.2rem;
    text-decoration: none;
    width: 100%;
    transition: box-shadow 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    box-shadow: inset 0 0 0 1px rgba(252, 173, 38, .5);
    padding: 0.75rem 1.2rem;
    resize: none;

    &:invalid {
        box-shadow: none;
    }
    
    &:focus {
        box-shadow: inset 0 0 0 1px #fcad26;
        border: none;
    }

    &.disabled,
    &:disabled {
        -moz-pointer-events: none;
        -webkit-pointer-events: none;
        -ms-pointer-events: none;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }
}