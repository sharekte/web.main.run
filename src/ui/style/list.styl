// list

ol {
    list-style: decimal;
    margin: 0 0 2.4rem 0;
    padding-left: 1.5rem;
    
    li {
        padding-left: 0.5rem;
    }
}

ul {
    list-style: disc;
    margin: 0 0 2.4rem 0;
    padding-left: 1rem;
    
    li {
        padding-left: 0.5rem;
    }
    
    &.alt {
        list-style: none;
        padding-left: 0;
        
        li {
            border-top: solid 1px #dddddd;
            padding: 0.6em 0;
            
            &:first-child {
                border-top: 0;
                padding-top: 0;
            }
        }
    }

    &.icons {
        cursor: default;
        list-style: none;
        padding-left: 0;
        
        li {
            display: inline-block;
            padding: 0 1.5rem 0 0;
            
            &:last-child {
                padding-right: 0;
            }
            
            .icon:before {
                font-size: 2.4rem;
            }
        }
    }

    &.icons-grid {
        list-style: none;
        padding: 0;
        position: relative;
        
        li {
            display: block;
            float: left;
            padding: 3rem 0;
            width: 50%;
            
            h3 {
                margin: 0;
            }
            
            &:nth-child(2n + 1) {
                box-shadow: inset -1px 0 0 0 #dddddd, 1px 0 0 0 #dddddd;
            }
            
            &:nth-child(2n + 3):before {
                background: #dddddd;
                content: '';
                display: block;
                height: 2px;
                margin-top: -3rem;
                position: absolute;
                width: 100%;
            }
        }
        
        &:after {
            clear: both;
            content: '';
            display: block;
        }
    }

    &.actions {
        cursor: default;
        list-style: none;
        padding-left: 0;
        
        li {
            display: inline-block;
            padding: 0 1rem 0 0;
            vertical-align: middle;
            
            &:last-child {
                padding-right: 0;
            }
        }
        
        &.small li {
            padding: 0 0.5rem 0 0;
        }
        
        &.vertical {
            li {
                display: block;
                padding: 1rem 0 0 0;
                
                &:first-child {
                    padding-top: 0;
                }
                
                > * {
                    margin-bottom: 0;
                }
            }
            
            &.small li {
                padding: 0.5rem 0 0 0;
                
                &:first-child {
                    padding-top: 0;
                }
            }
        }

        &.fit {
            display: table;
            margin-left: -1rem;
            padding: 0;
            table-layout: fixed;
            width: calc(100% + 1rem);
            
            li {
                display: table-cell;
                padding: 0 0 0 1rem;
                
                > * {
                    margin-bottom: 0;
                    min-width: 0;
                }
            }
            
            &.small {
                margin-left: -0.5rem;
                width: calc(100% + 0.5rem);
                
                li {
                    padding: 0 0 0 0.5rem;
                }
            }
        }
    }
}

dl {
    margin: 0 0 2rem 0;
    
    dt {
        display: block;
        font-weight: 600;
        margin: 0 0 1rem 0;
    }
    
    dd {
        margin-left: 2rem;
    }
}
